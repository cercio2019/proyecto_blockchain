<div class="container m-5">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h4>Transferencias</h4>
                </div>
                <div class="card-body">
                    <form action="transferencias/transaccion" method="post" id="transferForm">

                        <div  id="mensaje-formulario">
                            
                        </div>

                        <div class="form-group">
                            <input type="text" name="cedula" id="cedula" class="form-control"
                            placeholder="Ingrese Cedula" autofocus >
                            
                        </div>

                        <div class="form-group">
                            <input type="text" name="nombre_responsable" id="nombre"
                             class="form-control" placeholder="Ingrese su nombre" >
                        </div>
                        <p>Ingrese los datos de la persona que recibira la transaccion</p>
                        <div class="form-group">
                            <input type="text" name="cedula_beneficiado" id="ci_b" class="form-control"
                            placeholder="Ingrese la cedula del beneficiado" >
                        </div>

                        <div class="form-group">
                            <input type="text" name="nombre_beneficiado" id="nomb_b" class="form-control"
                            placeholder="Ingrese el nombre del beneficiado" >
                        </div>
                        <div class="form-group">
                             <input type="text" name="nro_cuenta" id="nro_c" class="form-control"
                             placeholder="Ingrese numero de cuenta" >  
                        </div>
                        <div class="form-group">
                            <label for="">Ingrese cantidad a transferir</label>
                            <input type="number" name="cantidad" id="cant_b" class="form-control">  Bs.S
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block" id="botn-trans">
                                transferir
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/formulario.js"></script>